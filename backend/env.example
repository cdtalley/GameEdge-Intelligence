# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/gameedge_db
DATABASE_SYNC_URL=postgresql://user:password@localhost:5432/gameedge_db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ML Model Configuration
ML_MODEL_PATH=./models
SENTIMENT_MODEL_NAME=cardiffnlp/twitter-roberta-base-sentiment-latest
CACHE_MODELS=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=GameEdge Intelligence
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
DEBUG=true
ENVIRONMENT=development

# External APIs (for future integrations)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
